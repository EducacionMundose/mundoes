apiVersion: v1
kind: ServiceAccount
metadata:
  name: ado
  namespace: kube-system
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: ado-admin
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
  - kind: ServiceAccount
    name: ado
    namespace: kube-system
---
apiVersion: v1
kind: Secret
metadata:
  name: ado-token
  namespace: kube-system
  annotations:
    kubernetes.io/service-account.name: ado
type: kubernetes.io/service-account-token
